<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_bg"
    tools:context=".Tambah_antrian_Activity">

    <EditText
        android:id="@+id/ET_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:ems="10"
        android:hint="masukkan nama"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/BT_tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ET_keperluan"
        android:layout_alignLeft="@+id/ET_keperluan"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="138dp"
        android:gravity="center"
        android:text="Confirm" />

    <EditText
        android:id="@+id/ET_keperluan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginTop="82dp"
        android:ems="10"
        android:hint="keperluan"
        android:inputType="textPersonName"
        android:visibility="visible" />

    <Button
        android:id="@+id/BT_batal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/BT_tambah"
        android:layout_alignEnd="@+id/ET_keperluan"
        android:layout_alignRight="@+id/ET_keperluan"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="BATAL" />
</RelativeLayout>